{
  "name": "expressts-typeorm-bp",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "princejoogie",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register ./src/index.ts",
    "build": "rimraf dist && ttsc --p ./tsconfig.json",
    "start": "node ./dist/index.js",
    "commit": "git-cz",
    "migration:run": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:run --config ./src/typeorm/config/ormconfig.ts",
    "migration:revert": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:revert --config ./src/typeorm/config/ormconfig.ts",
    "migration:generate": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:generate --pretty --config ./src/typeorm/config/ormconfig.ts -n PostRefactoring",
    "migration:create": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:create --config ./src/typeorm/config/ormconfig.ts -n CreateDb",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "git-cz": "^4.8.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.2",
    "typescript-transform-paths": "^3.3.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
